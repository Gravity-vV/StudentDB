<!DOCTYPE html>
<html>
  <head>
    <title>StudentDB</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <nav class="navbar navbar-expand-lg navbar-light bg-light">
    <a class="navbar-brand" href=<%=root_path %>>首页</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
    </button>
    <%#=link_to '学生列表' , students_path%>
    <div class="collapse navbar-collapse" id="navbarNav">
      <ul class="navbar-nav">
        <li class="nav-item">
          <a class="nav-link" href=<%=majors_path %>>专业</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href=<%=groups_path %>>班级</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href=<%=courses_path %>>课程</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href=<%=teachers_path %>>教师</a>
        </li>
        <li class="nav-item">
          <a class="nav-link" href=<%=students_path %>>学生</a>
        </li>
      </ul>
    </div>

    <ul class="navbar-nav">
      <li class="nav-item dropdown">
        <a class="nav-link dropdown-toggle" href="#" role="button" data-toggle="dropdown" aria-expanded="false">
          List
        </a>
        <div class="dropdown-menu">
          <a class="dropdown-item" href=<%=gradeinputshow_teachers_path %>>插入成绩</a>
          <a class="dropdown-item" href=<%=coursesetshow_teachers_path %>>开设课程</a>
        </div>
      </li>
    </ul>
    <%if current_admin %>
      <%= button_to "logout", destroy_admin_session_path, method: :delete, :class=>'btn btn-outline-success my-2 my-sm-0' %>
    <%end %>
  </nav>
  <p class="notice"><%= notice %></p>
  <p class="alert"><%= alert %></p>
  <%= yield %>
    <%if request.url!=root_url && request.url=='/admins/sign_in' %>
      <%=link_to '返回主页', root_path %>
    <%end %>
    <%#if current_admin %>
      <%#= button_to "logout", destroy_admin_session_path, method: :delete  %>
      <%#= button_to "AdminDashboard", 'y',method: :get  %>
    <%#end %>
  </body>

</html>
