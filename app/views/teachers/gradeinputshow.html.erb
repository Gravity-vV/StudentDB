<%= form_tag   gradeinput_teachers_path, method: :get,
               class: 'srch2' do  %>

  <div class="field">
    <%= text_field_tag :student_id, nil , placeholder:'学生' %>
  </div>

  <div class="field">
    <%= text_field_tag :course_id, nil , placeholder:'课程' %>
  </div>

  <div class="field">
